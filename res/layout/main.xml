<?xml version="1.0" encoding="utf-8"?>

<TableLayout 
android:id="@+id/RootLayout" 
android:layout_width="fill_parent" 
android:layout_height="fill_parent" 
android:stretchColumns="1"
xmlns:android="http://schemas.android.com/apk/res/android">

	<TableRow>
		<TextView android:text="@string/latitude" />	
		
		<TextView 
		android:gravity="right"
		android:id="@+id/latitude"
		android:text="@string/unknown" />
	</TableRow>
	
	<TableRow>
		<TextView android:text="@string/longtitude" />	
		
		<TextView 
		android:gravity="right"
		android:id="@+id/longtitude"
		android:text="@string/unknown" />
	</TableRow>
	
	<TableRow>
		<TextView android:text="@string/altitude" />	
		
		<TextView 
		android:gravity="right"
		android:id="@+id/altitude"
		android:text="@string/unknown" />
	</TableRow>
	
	<TableRow>
		<TextView android:text="@string/accuracy" />	
		
		<TextView 
		android:gravity="right"
		android:id="@+id/accuracy"
		android:text="@string/unknown" />
	</TableRow>
	
	<TableRow>
		<TextView android:text="@string/time" />	
		
		<TextView 
		android:gravity="right"
		android:id="@+id/time"
		android:text="@string/unknown" />
	</TableRow>

	<TableRow>
		<TextView android:text="@string/speed" />	
		
		<TextView 
		android:gravity="right"
		android:id="@+id/speed"
		android:text="@string/unknown" />
	</TableRow>

	<TableRow>
		<TextView android:text="@string/bearing" />	
		
		<TextView 
		android:gravity="right"
		android:id="@+id/bearing"
		android:text="@string/unknown" />
	</TableRow>

</TableLayout>